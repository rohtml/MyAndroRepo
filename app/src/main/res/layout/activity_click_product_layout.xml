<android.support.v7.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="3dp"
    app:cardBackgroundColor="@color/bg_news_list"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_fav"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@mipmap/fav"
                app:riv_corner_radius="50dp"
                android:padding="5dp"
                android:visibility="gone"
                android:background="@drawable/bg_round_red"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="6dp"
            android:text="sadsdf"
            android:maxLines="1"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        </LinearLayout>
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="5dp"
                android:text="Price:"/>

            <TextView
                android:id="@+id/txt_showPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="5dp"
                android:textColor="@color/black"

                android:text="200"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:layout_marginLeft="32dp"
                android:layout_gravity="right"
                android:text="OfferPrice:"/>
            <TextView
                android:id="@+id/txt_showOfferPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:text="150"/>


        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="0dp">
          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:padding="8dp"
                android:text="Price"/>

            <TextView
                android:id="@+id/txt_showPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="8dp"

           <!-     android:text="ShowPrice"/>&ndash;&gt;
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:layout_marginLeft="8dp"
                android:text="OfferPrice"/>
            <TextView
                android:id="@+id/txt_showOfferPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="5dp"

                android:layout_marginLeft="16dp"
                android:text="ShowPrice"/>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="5dp"
                android:text="Description"/>

            <TextView
                android:id="@+id/txt_productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_marginLeft="8dp"

                android:maxLines="6"
                android:text="Abc asdfi asdfkjd kasdjnfkjajdkjaksd kjkjasdkj
sadkflksdflksdjflklkdklakdslkjflklakdlkjflkkkkk"/>


            <View
                android:id="@+id/divider23"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="1dp"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">


            <EditText
                android:id="@+id/edt_enterPinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="top"
                android:layout_marginLeft="8dp"
                android:hint="Enter Pin Code"/>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_checkPin"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="6dp"
                    android:layout_gravity="center"



                    android:layout_marginLeft="8dp"



                    android:background="@drawable/bg_corner_pink"

                    android:text="Check"
                    android:textColor="@color/white" />


            </LinearLayout>
            <TextView
                android:id="@+id/txt_checkDeliveryLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="*Check Delivery of Your Location"
                android:textStyle="italic"/>


        </LinearLayout>
        <View
            android:id="@+id/divider452"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical" >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_quantity_add2cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"


                android:layout_marginTop="16dp"
                android:layout_marginBottom="0dp"

                android:background="@drawable/bg_corner_pink"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/add_to_cart"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_loc"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/location" />

            <TextView
                android:id="@+id/tv_list_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <RatingBar
                android:id="@+id/rating_list_latest"
                style="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:numStars="5"
                android:theme="@style/RatingBar_black" />

            <TextView
                android:id="@+id/tv_latest_list_tot_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_hotel_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</android.support.v7.widget.CardView>


</LinearLayout>
